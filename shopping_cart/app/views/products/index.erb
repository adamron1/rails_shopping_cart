
<h1>Stuff that we sell here</h1>

<table class='table'>
  <tr>
    <th>#</th>
    <th>Name</th>
    <th>Price ($)</th>
    <th></th>
  </tr>

  <% @products.each do |product| %>
    <tr>
      <td><%= product.id %></td>
      <td><%= product.title %></td>
      <td>$<%= product.price %></td>
      <td><%= link_to 'Show', product %></td>
    </tr>

  <%end%>

<%= link_to 'Go to Cart', controller: "carts", action: "index" %>

</table>
